<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="row justify-content-center align-items-center g-2">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>
      <%- include('includes/messages') %>
      <% if(allContacts.length > 0) { %> 
      <div class="responsive-table">
        <table class="table my-3">
          <% allContacts.forEach(contact=>{ %> 
          <tr>
            <td> <%= contact.nameContact %>  </td>
            <td> <%= contact.lastName %> </td>
            <td> <%= contact.email %> </td>
            <td> <%= contact.telephone %> </td>
            <td> <a style="text-decoration: none;" href="/contato/index/<%= contact._id %>">Editar</a> </td>
             <td> <a class="text-danger" style="text-decoration: none;" href="/contato/delete/<%= contact._id %>">Excluir</a> </td>
          </tr>
       <% }); %> 
        </table>
      </div>
      <% } else { %> 
        <p class="text-center lead">Não existem contatos na sua agenda.</p>
      <% }  %> 
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
